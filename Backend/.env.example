# Backend .env.example
# Copy this file to .env and fill in real values

# MongoDB connection string (do NOT commit credentials)
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/ExpenseDB?retryWrites=true&w=majority

# JWT secret for signing tokens
JWT_SECRET=your_jwt_secret_here

# Session secret for express-session
SESSION_SECRET=your_session_secret_here

# Frontend client URL for CORS
CLIENT_URL=http://localhost:5173

# Node environment
NODE_ENV=development

# Optional: server port
PORT=5000

# Cloudinary configuration for image upload and storage
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
