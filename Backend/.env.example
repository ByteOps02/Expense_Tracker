# MongoDB Atlas Connection URI
# Get this from MongoDB Atlas: https://www.mongodb.com/cloud/atlas
# Format: mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/database_name?retryWrites=true&w=majority
MONGO_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/expense_tracker?retryWrites=true&w=majority

# JWT Secret for authentication
# Generate a secure random string for this (min 32 characters recommended)
# You can use: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_change_in_production

# Session Secret for session management
# Generate a secure random string for this (min 32 characters recommended)
SESSION_SECRET=your_session_secret_key_change_in_production

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL for CORS (Cross-Origin Resource Sharing)
# Update this to your frontend URL in production
CLIENT_URL=http://localhost:5173

# Cloudinary Configuration (for image uploads)
# Get these from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
